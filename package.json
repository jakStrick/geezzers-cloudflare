{
	"name": "geezzers-cloudflare",
	"version": "1.0.0",
	"description": "The Geezzers' Gazzette - Cloudflare Edition",
	"author": "The Geezzers",
	"license": "MIT",
	"scripts": {
		"dev": "wrangler pages dev ./public --d1=geezzers-db --compatibility-date=2024-01-01",
		"deploy": "wrangler pages deploy ./public",
		"db:init": "wrangler d1 execute geezzers-db --file=./database-schema.sql",
		"db:init:local": "wrangler d1 execute geezzers-db --local --file=./database-schema.sql"
	},
	"devDependencies": {
		"wrangler": "^4.43.0"
	}
}
