{
	"name": "geezzers-cloudflare",
	"version": "1.0.0",
	"description": "The Geezzers' Gazzette - Cloudflare Edition",
	"author": "The Geezzers",
	"license": "MIT",
	"scripts": {
		"dev": "npx wrangler pages dev ./public --local --d1=geezzers-db",
		"deploy": "npx wrangler pages deploy ./public",
		"db:init": "npx wrangler d1 execute geezzers-db --local --file=./database-schema.sql",
		"db:create": "npx wrangler d1 create geezzers-db",
		"db:test": "npx wrangler d1 execute geezzers-db --local --command=\"SELECT * FROM posts\""
	},
	"devDependencies": {
		"wrangler": "^4.43.0"
	}
}
